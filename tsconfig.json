{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"target": "es2020",
		"allowJs": true,
		"jsx": "react-jsx",
		"lib":[
			"DOM",
			"ES2021"
		],
		"esModuleInterop": true,
	},
	"include": [
		"./client/**/*"
	]
}